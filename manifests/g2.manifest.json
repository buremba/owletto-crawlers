{
  "manifest_version": 2,
  "key": "g2",
  "name": "G2",
  "description": "Collects G2 product reviews",
  "version": "1.0.0",
  "file": "connectors/g2.ts",
  "authSchema": {
    "methods": [
      {
        "type": "none"
      }
    ]
  },
  "optionsSchema": {
    "description": "G2 connector options - requires trusted browser session for local execution",
    "$id": "G2Options",
    "type": "object",
    "required": [
      "product_url"
    ],
    "properties": {
      "product_url": {
        "description": "Full G2 product review URL (e.g., \"https://www.g2.com/products/confluence/reviews\")",
        "format": "uri",
        "pattern": "^https://www\\.g2\\.com/products/[^/]+/reviews",
        "type": "string"
      },
      "lookback_days": {
        "description": "Number of days to look back for historical data. Default: 365 (1 year). Maximum: 730 (2 years).",
        "minimum": 1,
        "maximum": 730,
        "default": 365,
        "type": "number"
      }
    }
  }
}
