{
  "manifest_version": 2,
  "key": "google_play",
  "name": "Google Play Store",
  "description": "Collects Google Play Store app reviews",
  "version": "1.0.0",
  "file": "connectors/google_play.ts",
  "authSchema": {
    "methods": [
      {
        "type": "none"
      }
    ]
  },
  "optionsSchema": {
    "description": "Google Play Store connector options",
    "$id": "GooglePlayOptions",
    "type": "object",
    "required": [
      "app_id"
    ],
    "properties": {
      "app_id": {
        "description": "Google Play package name (e.g., \"com.spotify.music\")",
        "minLength": 1,
        "pattern": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)+$",
        "type": "string"
      },
      "country": {
        "description": "ISO country code (default: \"us\")",
        "minLength": 2,
        "maxLength": 2,
        "default": "us",
        "type": "string"
      },
      "lang": {
        "description": "Language code (default: \"en\")",
        "minLength": 2,
        "maxLength": 5,
        "default": "en",
        "type": "string"
      }
    }
  }
}
