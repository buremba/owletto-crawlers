{
  "manifest_version": 2,
  "key": "x",
  "name": "X (Twitter)",
  "description": "Collects X/Twitter posts and mentions",
  "version": "1.0.0",
  "file": "connectors/x.ts",
  "authSchema": {
    "methods": [
      {
        "type": "none"
      }
    ]
  },
  "optionsSchema": {
    "description": "X (Twitter) connector options using twitter-scraper library",
    "$id": "XOptions",
    "type": "object",
    "required": [
      "search_query"
    ],
    "properties": {
      "search_query": {
        "description": "Search query for tweets (e.g., \"nodejs\", \"#programming\", \"from:user\")",
        "minLength": 1,
        "type": "string"
      },
      "min_engagement_for_threads": {
        "description": "Minimum engagement score to fetch conversation threads (default: 100)",
        "minimum": 0,
        "default": 100,
        "type": "number"
      },
      "max_threads_to_fetch": {
        "description": "Maximum number of conversation threads to fetch, ranked by engagement (default: 100)",
        "minimum": 1,
        "maximum": 500,
        "default": 100,
        "type": "number"
      }
    }
  }
}
