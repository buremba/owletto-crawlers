{
  "manifest_version": 1,
  "slug": "trustpilot",
  "name": "Trustpilot",
  "description": "Crawls Trustpilot reviews for businesses",
  "type": "trustpilot",
  "api_type": "browser",
  "crawler_type": "entity",
  "file": "crawlers/trustpilot.ts",
  "has_discover": true,
  "options_schema": {
    "description": "Trustpilot crawler options - requires either business_url or business_name",
    "$id": "TrustpilotOptions",
    "type": "object",
    "properties": {
      "business_url": {
        "description": "Full Trustpilot review URL (e.g., \"https://www.trustpilot.com/review/spotify.com\")",
        "format": "uri",
        "type": "string"
      },
      "business_name": {
        "description": "Business name for search-based lookup",
        "minLength": 1,
        "type": "string"
      },
      "lookback_days": {
        "description": "Number of days to look back for historical data. Default: 365 (1 year). Maximum: 730 (2 years).",
        "minimum": 1,
        "maximum": 730,
        "default": 365,
        "type": "number"
      }
    }
  },
  "auth_schema": {
    "methods": [
      {
        "type": "none"
      }
    ]
  }
}
