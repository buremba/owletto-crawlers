{
  "manifest_version": 2,
  "key": "ios_appstore",
  "name": "iOS App Store",
  "description": "Collects iOS App Store reviews",
  "version": "1.0.0",
  "file": "connectors/ios_appstore.ts",
  "authSchema": {
    "methods": [
      {
        "type": "none"
      }
    ]
  },
  "optionsSchema": {
    "description": "iOS App Store connector options",
    "$id": "IOSAppStoreOptions",
    "type": "object",
    "required": [
      "app_id",
      "country"
    ],
    "properties": {
      "app_id": {
        "description": "iOS App Store ID (e.g., \"324684580\" for Spotify)",
        "minLength": 1,
        "type": "string"
      },
      "country": {
        "description": "ISO country code (e.g., \"US\", \"GB\")",
        "minLength": 2,
        "maxLength": 2,
        "pattern": "^[A-Z]{2}$",
        "type": "string"
      },
      "app_name": {
        "description": "App name for fallback search if app_id lookup fails",
        "minLength": 1,
        "type": "string"
      }
    }
  }
}
