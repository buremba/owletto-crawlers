{
  "manifest_version": 1,
  "slug": "glassdoor",
  "name": "Glassdoor",
  "description": "Crawls Glassdoor company reviews",
  "type": "glassdoor",
  "api_type": "browser",
  "crawler_type": "entity",
  "file": "crawlers/glassdoor.ts",
  "has_discover": true,
  "options_schema": {
    "description": "Glassdoor crawler options",
    "$id": "GlassdoorOptions",
    "type": "object",
    "required": [
      "company_name"
    ],
    "properties": {
      "company_id": {
        "description": "Glassdoor company ID if known",
        "minLength": 1,
        "type": "string"
      },
      "company_name": {
        "description": "Company name for search-based lookup",
        "minLength": 1,
        "type": "string"
      },
      "lookback_days": {
        "description": "Number of days to look back for historical data. Default: 365 (1 year). Maximum: 730 (2 years).",
        "minimum": 1,
        "maximum": 730,
        "default": 365,
        "type": "number"
      }
    }
  },
  "auth_schema": {
    "methods": [
      {
        "type": "none"
      }
    ]
  }
}
